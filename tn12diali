            },
            {
                text: "Trong quá trình khai thác, vận chuyển và chế biến dầu khí ở nước ta cần đặc biệt chú ý giải quyết vấn đề nào sau đây?",
                options: [
                    "A. Thu hồi khí đồng hành.",
                    "B. Liên doanh với nước ngoài.",
                    "C. Tác động của thiên tai.",
                    "D. Các sự cố về môi trường."
                ]
            }
        ];
        
        // Biến lưu câu trả lời của người dùng
        let userAnswers = new Array(questions.length).fill(null);
        
        // Tạo câu hỏi trên giao diện
        function renderQuestions() {
            const container = document.getElementById('questions-container');
            container.innerHTML = '';
            
            questions.forEach((question, index) => {
                const questionElement = document.createElement('div');
                questionElement.className = 'question';
                
                let optionsHTML = '';
                question.options.forEach((option, optionIndex) => {
                    const optionLetter = String.fromCharCode(65 + optionIndex); // A, B, C, D
                    optionsHTML += `
                        <div class="option ${userAnswers[index] === optionLetter ? 'selected' : ''}" data-question="${index}" data-option="${optionLetter}">
                            <input type="radio" name="question-${index}" id="q${index}-${optionLetter}" value="${optionLetter}" ${userAnswers[index] === optionLetter ? 'checked' : ''}>
                            <label for="q${index}-${optionLetter}">
                                <span class="option-label">${optionLetter}.</span>
                                ${option.substring(3)}
                            </label>
                        </div>
                    `;
                });
                
                questionElement.innerHTML = `
                    <div class="question-number">Câu ${index + 1}:</div>
                    <div class="question-text">${question.text}</div>
                    <div class="options">${optionsHTML}</div>
                `;
                
                container.appendChild(questionElement);
            });
            
            // Thêm sự kiện cho các lựa chọn
            document.querySelectorAll('.option').forEach(option => {
                option.addEventListener('click', function() {
                    const questionIndex = parseInt(this.getAttribute('data-question'));
                    const selectedOption = this.getAttribute('data-option');
                    
                    // Bỏ chọn tất cả các option trong câu hỏi này
                    document.querySelectorAll(`.option[data-question="${questionIndex}"]`).forEach(opt => {
                        opt.classList.remove('selected');
                    });
                    
                    // Chọn option này
                    this.classList.add('selected');
                    const radioInput = this.querySelector('input');
                    radioInput.checked = true;
                    
                    // Lưu câu trả lời
                    userAnswers[questionIndex] = selectedOption;
                });
            });
        }
        
        // Tính điểm và hiển thị kết quả
        function calculateScore() {
            let score = 0;
            let resultsHTML = '';
            
            for (let i = 0; i < questions.length; i++) {
                const userAnswer = userAnswers[i];
                const correctAnswer = correctAnswers[i];
                const isCorrect = userAnswer === correctAnswer;
                
                if (isCorrect) {
                    score++;
                }
                
                // Tạo HTML cho từng câu trả lời
                resultsHTML += `
                    <div class="answer-item ${isCorrect ? 'correct' : 'incorrect'}">
                        <div class="answer-status">
                            Câu ${i + 1}: ${isCorrect ? 'ĐÚNG' : 'SAI'}
                        </div>
                        <div>Đáp án của bạn: <span class="user-answer">${userAnswer || 'Chưa chọn'}</span></div>
                        <div>Đáp án đúng: <span class="correct-answer">${correctAnswer}</span></div>
                    </div>
                `;
            }
            
            // Hiển thị điểm
            const scoreElement = document.getElementById('score');
            const scoreTextElement = document.getElementById('score-text');
            const answersSummaryElement = document.getElementById('answers-summary');
            const resultsContainer = document.getElementById('results-container');
            
            scoreElement.textContent = `${score}/${questions.length}`;
            scoreTextElement.textContent = `Bạn đã trả lời đúng ${score} trên tổng số ${questions.length} câu hỏi.`;
            answersSummaryElement.innerHTML = resultsHTML;
            resultsContainer.classList.add('show');
            
            // Cuộn xuống phần kết quả
            resultsContainer.scrollIntoView({ behavior: 'smooth' });
        }
        
        // Reset bài thi
        function resetQuiz() {
            userAnswers = new Array(questions.length).fill(null);
            renderQuestions();
            
            const resultsContainer = document.getElementById('results-container');
            resultsContainer.classList.remove('show');
            
            // Cuộn lên đầu trang
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }
        
        // Sự kiện khi nhấn nút Nộp bài
        document.getElementById('submit-btn').addEventListener('click', function() {
            // Kiểm tra xem đã trả lời hết tất cả câu hỏi chưa
            const unansweredCount = userAnswers.filter(answer => answer === null).length;
            
            if (unansweredCount > 0) {
                const confirmSubmit = confirm(`Bạn còn ${unansweredCount} câu chưa trả lời. Bạn có chắc chắn muốn nộp bài không?`);
                if (confirmSubmit) {
                    calculateScore();
                }
            } else {
                calculateScore();
            }
        });
        
        // Sự kiện khi nhấn nút Làm lại
        document.getElementById('reset-btn').addEventListener('click', resetQuiz);
        
        // Khởi tạo bài thi khi trang được tải
        document.addEventListener('DOMContentLoaded', function() {
            renderQuestions();
        });
    </script>
</body>
</html>
